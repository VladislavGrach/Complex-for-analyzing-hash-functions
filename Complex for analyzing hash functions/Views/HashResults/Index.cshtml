@model IEnumerable<Complex_for_analyzing_hash_functions.Models.HashTestResult>
@using System.Text.Json;

@{
    ViewData["Title"] = "Результаты тестирования";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:opsz,wght@14..32,400;14..32,500;14..32,600&display=swap" rel="stylesheet">
<link rel="stylesheet" href="~/css/results.css">

<style>
    .details-card {
        background: #ffffff;
        border: 2px solid #cbd5e1; /* ← основное изменение */
        border-radius: 16px;
        padding: 1.25rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.02);
    }
</style>

<div class="container py-4">
    <h2>Результаты тестирования</h2>
    <p class="subtitle">История запусков и статистика по каждому эксперименту</p>

    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th style="width: 80px;">ID</th>
                            <th style="width: 180px;">Дата</th>
                            <th style="width: 160px;">Алгоритм</th>
                            <th style="width: 110px;">Раунды</th>
                            <th style="width: 110px;">Тестов</th>
                            <th style="width: 170px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Model)
                        {
                            JsonElement raw;
                            try
                            {
                                raw = JsonSerializer.Deserialize<JsonElement>(r.BitFlipJson);
                            }
                            catch
                            {
                                raw = default;
                            }
                            var json = (raw.ValueKind != JsonValueKind.Undefined && raw.ValueKind != JsonValueKind.Null)
                            ? Complex_for_analyzing_hash_functions.Helpers.JsonUtils.NormalizeToObject(raw)
                            : default;

                            <tr class="main-row">
                                <td><span style="color: #0f172a;">@r.Id</span></td>
                                <td class="text-nowrap" style="color: #475569;">@r.RunDate.ToString("dd.MM.yyyy HH:mm")</td>
                                <td><span style="color: #0f172a;">@r.Algorithm</span></td>
                                <td><span class="badge-rounds">@r.Rounds</span></td>
                                <td style="color: #475569;">@r.TestsCount</td>
                                <td class="text-end">
                                    <button class="btn btn-outline-primary details-toggle"
                                            type="button"
                                            onclick="toggleDetails(this, @r.Id)"
                                            data-text-show="Показать детали"
                                            data-text-hide="Скрыть детали">
                                        Показать детали
                                    </button>
                                </td>
                            </tr>

                            <tr class="details-row" id="details-@r.Id" style="display: none;">
                                <td colspan="6" class="p-0">
                                    <div class="details-content p-3 p-md-4">
                                        @if (json.ValueKind == JsonValueKind.Undefined || json.ValueKind == JsonValueKind.Null)
                                        {
                                            <div class="details-card">
                                                <p class="text-muted mb-0">Не удалось прочитать JSON статистики.</p>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="row g-4">
                                                @if (json.TryGetProperty("Basic", out var basic) && basic.ValueKind == JsonValueKind.Object)
                                                {
                                                    <div class="col-12">
                                                        <div class="details-card">
                                                            <h3 class="details-title">Basic</h3>
                                                            <div class="table-responsive">
                                                                <table class="basic-table">
                                                                    <tbody>
                                                                        @foreach (var prop in basic.EnumerateObject())
                                                                        {
                                                                            <tr>
                                                                                <th>@prop.Name</th>
                                                                                <td>@prop.Value</td>
                                                                            </tr>
                                                                        }
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }

                                                @if (json.TryGetProperty("NIST", out var nist) && nist.ValueKind == JsonValueKind.Object)
                                                {
                                                    <div class="col-lg-6">
                                                        <div class="details-card h-100">
                                                            <h3 class="details-title">NIST</h3>
                                                            <ul class="stats-list">
                                                                @foreach (var test in nist.EnumerateObject())
                                                                {
                                                                    <li class="stats-item">
                                                                        <span class="stats-label">@test.Name</span>
                                                                        @if (test.Name == "Notes")
                                                                        {
                                                                            <span class="stats-value notes-value">@test.Value</span>
                                                                        }
                                                                        else
                                                                        {
                                                                            <span class="stats-value">@test.Value</span>
                                                                        }
                                                                    </li>
                                                                }
                                                            </ul>
                                                        </div>
                                                    </div>
                                                }

                                                @if (json.TryGetProperty("Diehard", out var dh) && dh.ValueKind == JsonValueKind.Object)
                                                {
                                                    <div class="col-lg-6">
                                                        <div class="details-card h-100">
                                                            <h3 class="details-title">Diehard</h3>
                                                            <ul class="stats-list">
                                                                @foreach (var test in dh.EnumerateObject())
                                                                {
                                                                    <li class="stats-item">
                                                                        <span class="stats-label">@test.Name</span>
                                                                        @if (test.Name == "Notes")
                                                                        {
                                                                            <span class="stats-value notes-value">@test.Value</span>
                                                                        }
                                                                        else
                                                                        {
                                                                            <span class="stats-value">@test.Value</span>
                                                                        }
                                                                    </li>
                                                                }
                                                            </ul>
                                                        </div>
                                                    </div>
                                                }

                                                @if (json.TryGetProperty("TestU01", out var u01) && u01.ValueKind == JsonValueKind.Object)
                                                {
                                                    <div class="col-lg-6">
                                                        <div class="details-card h-100">
                                                            <h3 class="details-title">TestU01</h3>
                                                            <ul class="stats-list">
                                                                @foreach (var test in u01.EnumerateObject())
                                                                {
                                                                    <li class="stats-item">
                                                                        <span class="stats-label">@test.Name</span>
                                                                        @if (test.Name == "Notes")
                                                                        {
                                                                            <span class="stats-value notes-value">@test.Value</span>
                                                                        }
                                                                        else
                                                                        {
                                                                            <span class="stats-value">@test.Value</span>
                                                                        }
                                                                    </li>
                                                                }
                                                            </ul>
                                                        </div>
                                                    </div>
                                                }

                                                @if (json.TryGetProperty("Avalanche", out var avalanche) && avalanche.ValueKind == JsonValueKind.Object)
                                                {
                                                    <div class="col-lg-6">
                                                        <div class="details-card h-100">
                                                            <h3 class="details-title">Avalanche</h3>
                                                            <ul class="stats-list">
                                                                @foreach (var test in avalanche.EnumerateObject())
                                                                {
                                                                    <li class="stats-item">
                                                                        <span class="stats-label">@test.Name</span>
                                                                        @if (test.Name == "Notes")
                                                                        {
                                                                            <span class="stats-value notes-value">@test.Value</span>
                                                                        }
                                                                        else
                                                                        {
                                                                            <span class="stats-value">@test.Value</span>
                                                                        }
                                                                    </li>
                                                                }
                                                            </ul>
                                                        </div>
                                                    </div>
                                                }

                                                @if (json.TryGetProperty("BIC", out var bic) && bic.ValueKind == JsonValueKind.Object)
                                                {
                                                    <div class="col-lg-6">
                                                        <div class="details-card h-100">
                                                            <h3 class="details-title">BIC</h3>
                                                            <ul class="stats-list">
                                                                @foreach (var test in bic.EnumerateObject())
                                                                {
                                                                    <li class="stats-item">
                                                                        <span class="stats-label">@test.Name</span>
                                                                        @if (test.Name == "Notes")
                                                                        {
                                                                            <span class="stats-value notes-value bic-notes">@test.Value</span>
                                                                        }
                                                                        else
                                                                        {
                                                                            <span class="stats-value">@test.Value</span>
                                                                        }
                                                                    </li>
                                                                }
                                                            </ul>
                                                        </div>
                                                    </div>
                                                }

                                                <div class="col-12">
                                                    <div class="details-card">
                                                        <details>
                                                            <summary class="json-summary">Показать полный JSON</summary>
                                                            <pre class="json-pre mt-3 mb-0">@r.BitFlipJson</pre>
                                                        </details>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }

                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="6" class="empty-state">
                                    <p class="mb-0">Результатов пока нет</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/results.js" asp-append-version="true"></script>
}