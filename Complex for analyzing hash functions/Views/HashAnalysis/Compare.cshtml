@model List<Complex_for_analyzing_hash_functions.Models.AlgorithmComparisonPoint>

@{
    ViewData["Title"] = "Сравнение алгоритмов";
    var metric = (ViewBag.Metric as string ?? "sac").Trim().ToLowerInvariant();
}

<h2 class="fw-semibold mb-3">Сравнение хэш-функций</h2>

<p class="text-muted">
    Фиксируется число раундов, после чего производится сравнительный анализ
    различных алгоритмов по выбранной статистической метрике.
</p>

<form method="get" id="compareForm" class="mb-4">
    <div class="row g-3 align-items-end">
        <div class="col-auto">
            <label class="form-label" for="roundsInput">Число раундов</label>
            <input type="number"
                   name="rounds"
                   value="@ViewBag.Rounds"
                   class="form-control"
                   min="1"
                   id="roundsInput" />
        </div>
    </div>

    <div class="mt-3">
        <label class="form-label fw-semibold">Метрика:</label><br />

        <div class="form-check form-check-inline">
            <input class="form-check-input"
                   type="radio"
                   name="metric"
                   id="metric-sac"
                   value="sac"
                   checked="@(metric=="sac" ? "checked" : null)"/>
            <label class="form-check-label" for="metric-sac">Avalanche (SAC)</label>
        </div>

        <div class="form-check form-check-inline">
            <input class="form-check-input"
                   type="radio"
                   name="metric"
                   id="metric-bic"
                   value="bic"
                   checked="@(metric=="bic" ? "checked" : null)" />
            <label class="form-check-label" for="metric-bic">BIC</label>
        </div>

        <div class="form-check form-check-inline">
            <input class="form-check-input"
                   type="radio"
                   name="metric"
                   id="metric-mono"
                   value="mono"
                   checked="@(metric=="mono" ? "checked" : null)" />
            <label class="form-check-label" for="metric-mono">Monobit</label>
        </div>

    </div>
</form>

<div class="card shadow-sm">
    <div class="card-body">
        <canvas id="compareChart" height="120"></canvas>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        const algorithms = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Select(m => m.Algorithm)));
        const mean = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Select(m => m.Mean)));
        const metric = "@metric";
    </script>

    <script src="~/js/hash-compare.js"></script>

    <script>
        const form = document.getElementById("compareForm");
        const roundsInput = document.getElementById("roundsInput");

        document.querySelectorAll("input[name=metric]")
            .forEach(r => r.addEventListener("change", () => form.submit()));

        let roundsTimer = null;
        roundsInput.addEventListener("input", () => {
            clearTimeout(roundsTimer);
            roundsTimer = setTimeout(() => form.submit(), 500);
        });
    </script>
}
