@model List<Complex_for_analyzing_hash_functions.Models.AlgorithmComparisonPoint>

@{
    ViewData["Title"] = "Сравнение алгоритмов";

    var suite = (ViewBag.Suite as string ?? "diff").Trim();
    var metric = (ViewBag.Metric as string ?? "SAC").Trim();
    var rounds = ViewBag.Rounds ?? 1;
}

<h2 class="fw-semibold mb-3">Сравнение хэш-функций</h2>

<p class="text-muted">
    Фиксируется число раундов, после чего производится сравнительный анализ
    различных алгоритмов по выбранной статистической метрике.
</p>

<form method="get" id="compareForm" class="mb-4">

    <!-- ===== ЧИСЛО РАУНДОВ ===== -->
    <div class="row g-3 align-items-end">
        <div class="col-auto">
            <label class="form-label" for="roundsInput">Число раундов</label>
            <input type="number"
                   name="rounds"
                   value="@rounds"
                   class="form-control"
                   min="1"
                   id="roundsInput" />
        </div>
    </div>

    <!-- ===== ГРУППА ТЕСТОВ ===== -->
    <div class="mt-4">
        <label class="form-label fw-semibold">Группа тестов:</label><br />

        <div class="form-check form-check-inline">
            <input class="form-check-input"
                   type="radio"
                   name="suite"
                   id="suite-diff"
                   value="diff"
            @(suite == "diff" ? "checked" : null) />
            <label class="form-check-label" for="suite-diff">SAC / BIC</label>
        </div>

        <div class="form-check form-check-inline">
            <input class="form-check-input"
                   type="radio"
                   name="suite"
                   id="suite-nist"
                   value="nist"
            @(suite == "nist" ? "checked" : null) />
            <label class="form-check-label" for="suite-nist">NIST</label>
        </div>

        <div class="form-check form-check-inline">
            <input class="form-check-input"
                   type="radio"
                   name="suite"
                   id="suite-diehard"
                   value="diehard"
            @(suite == "diehard" ? "checked" : null) />
            <label class="form-check-label" for="suite-diehard">Diehard</label>
        </div>

        <div class="form-check form-check-inline">
            <input class="form-check-input"
                   type="radio"
                   name="suite"
                   id="suite-testu01"
                   value="testu01"
            @(suite == "testu01" ? "checked" : null) />
            <label class="form-check-label" for="suite-testu01">TestU01</label>
        </div>
    </div>


    <!-- ===== ВЫБОР ТЕСТА ===== -->
    <div class="mt-3">
        <label class="form-label fw-semibold" for="metricSelect">
            Статистический тест:
        </label>

        <select name="metric"
                id="metricSelect"
                class="form-select"
                style="max-width: 420px;">
            <!-- заполняется JS -->
        </select>
    </div>
</form>

<!-- ===== ГРАФИК ===== -->
<div class="card shadow-sm">
    <div class="card-body">
        <canvas id="compareChart" height="120"></canvas>

        <div class="mt-3 d-flex gap-2">
            <button id="exportCsvBtn"
                    type="button"
                    class="btn btn-outline-secondary btn-sm">
                Экспорт CSV
            </button>

            <button id="exportJsonBtn"
                    type="button"
                    class="btn btn-outline-secondary btn-sm">
                Экспорт JSON
            </button>
        </div>
    </div>
</div>

@section Scripts {

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <!-- ===== ДАННЫЕ ИЗ СЕРВЕРА ===== -->
    <script>
        const algorithms = @Html.Raw(
        System.Text.Json.JsonSerializer.Serialize(Model.Select(m => m.Algorithm))
    );

        const mean = @Html.Raw(
        System.Text.Json.JsonSerializer.Serialize(Model.Select(m => m.Mean))
    );

        const currentSuite  = "@suite";
        const currentMetric = "@metric";
    </script>

    <!-- ===== ОСНОВНАЯ ЛОГИКА ===== -->
    <script src="~/js/hash-compare.js"></script>

    <!-- ===== UI-ЛОГИКА ФОРМЫ ===== -->
    <script>
        const form = document.getElementById("compareForm");
        const roundsInput = document.getElementById("roundsInput");
        const metricSelect = document.getElementById("metricSelect");

        // авто-submit при смене suite
        document.querySelectorAll("input[name=suite]")
            .forEach(r => r.addEventListener("change", () => form.submit()));

        // авто-submit при смене теста
        metricSelect.addEventListener("change", () => form.submit());

        // debounce для rounds
        let roundsTimer = null;
        roundsInput.addEventListener("input", () => {
            clearTimeout(roundsTimer);
            roundsTimer = setTimeout(() => form.submit(), 500);
        });
    </script>
}
