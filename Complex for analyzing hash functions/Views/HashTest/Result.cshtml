@model Complex_for_analyzing_hash_functions.Models.HashTestResult
@using System.Text.Json;

@{
    ViewData["Title"] = "Результат тестирования";

    JsonElement raw;
    try
    {
        raw = JsonSerializer.Deserialize<JsonElement>(Model.BitFlipJson);
    }
    catch
    {
        raw = default;
    }

    var json = (raw.ValueKind != JsonValueKind.Undefined && raw.ValueKind != JsonValueKind.Null)
        ? Complex_for_analyzing_hash_functions.Helpers.JsonUtils.NormalizeToObject(raw)
        : default;
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:opsz,wght@14..32,400;14..32,500;14..32,600&display=swap" rel="stylesheet">
<link rel="stylesheet" href="~/css/results.css">

<div class="container py-4">
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-4">
        <div>
            <h2>Результат тестирования #@Model.Id</h2>
            <p class="subtitle mb-0">Детальная статистика по запуску от @Model.RunDate.ToString("dd.MM.yyyy HH:mm")</p>
        </div>
        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary">
            ← Вернуться на главную
        </a>
    </div>
    <div class="row g-4">

        <!-- BASIC -->
        <div class="col-12">
            <div class="details-card">
                <h3 class="details-title">Basic</h3>
                <div class="table-responsive">
                    <table class="basic-table">
                        <tbody>
                            <tr>
                                <th>RunDate</th>
                                <td>@Model.RunDate.ToString("dd.MM.yyyy HH:mm:ss")</td>
                            </tr>
                            <tr>
                                <th>Algorithm</th>
                                <td>@Model.Algorithm</td>
                            </tr>
                            <tr>
                                <th>Rounds</th>
                                <td><span class="badge-rounds">@Model.Rounds</span></td>
                            </tr>
                            <tr>
                                <th>TestsCount</th>
                                <td>@Model.TestsCount</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        @if (json.ValueKind == JsonValueKind.Undefined || json.ValueKind == JsonValueKind.Null)
        {
            <div class="col-12">
                <div class="details-card">
                    <p class="text-muted mb-0">Не удалось прочитать JSON статистики.</p>
                </div>
            </div>
        }
        else
        {
            <!-- NIST -->
            @if (json.TryGetProperty("NIST", out var nist) && nist.ValueKind == JsonValueKind.Object)
            {
                <div class="col-lg-6">
                    <div class="details-card h-100">
                        <h3 class="details-title">NIST</h3>
                        <ul class="stats-list">
                            @foreach (var test in nist.EnumerateObject())
                            {
                                <li class="stats-item">
                                    <span class="stats-label">@test.Name</span>
                                    @if (test.Name == "Notes")
                                    {
                                        <span class="stats-value notes-value">@test.Value</span>
                                    }
                                    else
                                    {
                                        <span class="stats-value">@test.Value</span>
                                    }
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            }

            <!-- DIEHARD -->
            @if (json.TryGetProperty("Diehard", out var dh) && dh.ValueKind == JsonValueKind.Object)
            {
                <div class="col-lg-6">
                    <div class="details-card h-100">
                        <h3 class="details-title">Diehard</h3>
                        <ul class="stats-list">
                            @foreach (var test in dh.EnumerateObject())
                            {
                                <li class="stats-item">
                                    <span class="stats-label">@test.Name</span>
                                    @if (test.Name == "Notes")
                                    {
                                        <span class="stats-value notes-value">@test.Value</span>
                                    }
                                    else
                                    {
                                        <span class="stats-value">@test.Value</span>
                                    }
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            }

            <!-- TESTU01 -->
            @if (json.TryGetProperty("TestU01", out var u01) && u01.ValueKind == JsonValueKind.Object)
            {
                <div class="col-lg-6">
                    <div class="details-card h-100">
                        <h3 class="details-title">TestU01</h3>
                        <ul class="stats-list">
                            @foreach (var test in u01.EnumerateObject())
                            {
                                <li class="stats-item">
                                    <span class="stats-label">@test.Name</span>
                                    @if (test.Name == "Notes")
                                    {
                                        <span class="stats-value notes-value">@test.Value</span>
                                    }
                                    else
                                    {
                                        <span class="stats-value">@test.Value</span>
                                    }
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            }

            <!-- AVALANCHE -->
            @if (json.TryGetProperty("Avalanche", out var avalanche) && avalanche.ValueKind == JsonValueKind.Object)
            {
                <div class="col-lg-6">
                    <div class="details-card h-100">
                        <h3 class="details-title">Avalanche</h3>
                        <ul class="stats-list">
                            @foreach (var test in avalanche.EnumerateObject())
                            {
                                <li class="stats-item">
                                    <span class="stats-label">@test.Name</span>
                                    @if (test.Name == "Notes")
                                    {
                                        <span class="stats-value notes-value">@test.Value</span>
                                    }
                                    else
                                    {
                                        <span class="stats-value">@test.Value</span>
                                    }
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            }

            <!-- BIC -->
            @if (json.TryGetProperty("BIC", out var bic) && bic.ValueKind == JsonValueKind.Object)
            {
                <div class="col-lg-6">
                    <div class="details-card h-100">
                        <h3 class="details-title">BIC</h3>
                        <ul class="stats-list">
                            @foreach (var test in bic.EnumerateObject())
                            {
                                <li class="stats-item">
                                    <span class="stats-label">@test.Name</span>
                                    @if (test.Name == "Notes")
                                    {
                                        <span class="stats-value notes-value bic-notes">@test.Value</span>
                                    }
                                    else
                                    {
                                        <span class="stats-value">@test.Value</span>
                                    }
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            }

            <!-- Полный JSON -->
            <div class="col-12">
                <div class="details-card">
                    <details>
                        <summary class="json-summary">Показать полный JSON</summary>
                        <pre class="json-pre mt-3 mb-0">@Model.BitFlipJson</pre>
                    </details>
                </div>
            </div>
        }
    </div>
</div>